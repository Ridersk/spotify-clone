<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.spotifyclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_spotify"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_spotify_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.spotifyclone.presentation.login.CredentialsActivity"></activity>
        <activity android:name="com.spotifyclone.presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.spotifyclone.presentation.login.LoginActivity" />
    </application>

</manifest>