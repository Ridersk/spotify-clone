<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityLocalSongs"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spotifyclone.presentation.playlist.LocalSongsActivity">

    <include layout="@layout/include_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarMain"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="22dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/textTitle"
            style="@style/smallSubtitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="Local Songs" />

        <Button
            android:id="@+id/buttonRandomPlay"
            style="@style/secondaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            tools:text="SHUFFLE PLAY" />

        <RelativeLayout
            android:id="@+id/MusicControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonRandomPlay"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDownloadedSongs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Downloaded Songs" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swicthDownloadedSongs"
                style="@style/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:checked="true"
                app:thumbTint="@color/selector_switch_button_thumb"
                app:trackTint="@color/selector_switch_button_track"
                android:layout_toEndOf="@+id/textDownloadedSongs" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMusics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MusicControl"
            android:layout_marginTop="22dp"
            tools:listitem="@layout/item_music" />

    </RelativeLayout>
</RelativeLayout>