<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityLocalSongs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <ViewFlipper
        android:id="@+id/viewFlipperPlaylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/green"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="22dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/textTitle"
                style="@style/smallSubtitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="Local Songs" />

            <Button
                android:id="@+id/buttonRandomPlay"
                style="@style/secondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTitle"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                tools:text="SHUFFLE PLAY" />

            <RelativeLayout
                android:id="@+id/MusicControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonRandomPlay"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDownloadedSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="Downloaded Songs" />


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swicthDownloadedSongs"
                    style="@style/switchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    app:thumbTint="@color/selector_switch_button_thumb"
                    app:trackTint="@color/selector_switch_button_track"
                    android:layout_toEndOf="@+id/textDownloadedSongs" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMusics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/MusicControl"
                android:layout_marginTop="22dp"
                tools:listitem="@layout/item_music" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtEmptySongList"
                style="@style/subTitleTextView"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="There Is Nothing Here" />

            <TextView
                android:id="@+id/txtDescriptionEmptySongList"
                style="@style/mediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmptySongList"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean tincidunt fringilla augue, eu lobortis dui malesuada at. Vivamus in porttitor dui. Vivamus dignissim nec enim id porta" />
        </RelativeLayout>
    </ViewFlipper>
</LinearLayout>